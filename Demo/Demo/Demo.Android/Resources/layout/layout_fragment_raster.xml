<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:fitsSystemWindows="true">

  <ImageView
    android:id="@+id/raster_image_view"
    android:src="@drawable/android_raster"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/content_padding"
    android:layout_marginBottom="@dimen/content_padding"
    android:layout_marginLeft="@dimen/side_padding"
    android:layout_marginRight="@dimen/side_padding"
    android:layout_centerHorizontal="true" />

  <SeekBar
    android:id="@+id/size_seek_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="@dimen/content_padding"
    android:layout_marginBottom="@dimen/content_padding"
    android:layout_marginLeft="@dimen/side_padding"
    android:layout_marginRight="@dimen/side_padding"
    android:maxHeight="2dp" />

  <TextView
    android:id="@+id/textview_motivation"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@id/size_seek_bar"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="@dimen/content_padding"
    android:layout_marginBottom="@dimen/content_padding"
    android:layout_marginLeft="@dimen/side_padding"
    android:layout_marginRight="@dimen/side_padding"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="@string/raster_motivation"/>

</RelativeLayout>
