<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:fitsSystemWindows="true">

  <ImageView
    android:id="@+id/vector_image_view"
    app:srcCompat="@drawable/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/contentPadding"
    android:layout_marginBottom="@dimen/contentPadding"
    android:layout_marginLeft="@dimen/sidePadding"
    android:layout_marginRight="@dimen/sidePadding"
    android:layout_centerHorizontal="true" />

  <SeekBar
    android:id="@+id/size_seek_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="@dimen/contentPadding"
    android:layout_marginBottom="@dimen/contentPadding"
    android:layout_marginLeft="@dimen/sidePadding"
    android:layout_marginRight="@dimen/sidePadding"
    android:max="1000"
    android:maxHeight="2dp" />

</RelativeLayout>
